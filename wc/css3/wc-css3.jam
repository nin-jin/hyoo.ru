        node.attachEvent( 'onmove', refresh )
        node.attachEvent( 'onmouseenter', refresh )
        node.attachEvent( 'onmouseleave', refresh )
        node.attachEvent( 'onpropertychange', refresh )

        refresh()
    }
    */
	
})
