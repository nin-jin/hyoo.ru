			fill( String( node.currentStyle[ '-wc-css3_background' ] || '' ).replace( /["']/g, '' ) )
			shadow( String( node.currentStyle[ '-wc-css3_box-shadow' ] || '' ).replace( /["']/g, '' ) )
            
			var active= borderRadius() || stroke() || fill() || shadow()
			
            if( active ){
                left( node.offsetLeft )
                top( node.offsetTop )
